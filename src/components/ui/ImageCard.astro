---
import { Image } from 'astro:assets'

export type Props = {
  image: ImageMetadata
  imageAlt: string
  class?: string
}

const { image, imageAlt, class: className = '' } = Astro.props as Props
---

<div class={`border-brand relative overflow-hidden rounded-3xl border  ${className} `}>
  <Image src={image} alt={imageAlt} class="h-full w-full object-cover absolute inset-0" loading="lazy" />
</div>
