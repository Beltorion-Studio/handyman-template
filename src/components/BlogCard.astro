---
export interface Props {
  image?: string
  imageAlt?: string
  date?: string
  title?: string
  description?: string
  readMoreText?: string
  href?: string
}

const {
  image = '/placeholder-blog.jpg',
  imageAlt = 'Blog post image',
  date = '21 May 2025',
  title = 'The Secret to Stress-Free Furniture Assembly',
  description = 'Flat-pack furniture can be intimidating. This post reveals tricks, tools, and handyman tips to turn Ikea boxes into finished furniture without frustration or wasted hours.',
  readMoreText = 'Read more',
  href = '#',
} = Astro.props
---

<div class="border-brand relative size-full rounded-3xl border border-solid bg-white">
  <div
    class="relative flex size-full flex-col content-stretch items-start justify-start overflow-clip"
  >
    <!-- Image Section -->
    <div
      class="h-60 w-full shrink-0 bg-cover bg-center bg-no-repeat"
      style={`background-image: url(${image})`}
    >
    </div>

    <!-- Content Section -->
    <div
      class="relative box-border flex h-[265px] w-full shrink-0 flex-col content-stretch items-start justify-start gap-4 p-6"
    >
      <div
        class="relative flex w-full shrink-0 flex-col content-stretch items-start justify-start gap-4 leading-0"
      >
        <!-- Date -->
        <div class="relative shrink-0 text-sm font-normal text-nowrap text-black">
          <p class="leading-[1.4] whitespace-pre">{date}</p>
        </div>

        <!-- Title -->
        <div class="text-text-primary relative min-w-full shrink-0 text-2xl font-bold">
          <h3 class="leading-normal">{title}</h3>
        </div>

        <!-- Description -->
        <div
          class="text-text-primary relative min-w-full shrink-0 overflow-hidden text-base font-normal overflow-ellipsis"
        >
          <p class="leading-[1.4]">{description}</p>
        </div>
      </div>

      <!-- Read More Link -->
      <div class="relative flex shrink-0 content-stretch items-center justify-start">
        <a
          href={href}
          class="relative flex size-full content-stretch items-center justify-start transition-opacity duration-300 hover:opacity-80"
        >
          <div
            class="text-light relative shrink-0 text-lg leading-0 font-bold tracking-wide text-nowrap"
          >
            <p class="leading-[1.4] whitespace-pre underline decoration-solid underline-offset-2">
              {readMoreText}
            </p>
          </div>
          <div class="relative ml-1 size-6 shrink-0 overflow-clip">
            <svg class="text-light h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
              ></path>
            </svg>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
