---
import { z } from 'zod'

const StatsSchema = z.object({
  value: z.string(),
  label: z.string(),
})

const PropsSchema = z.object({
  sectionId: z.string(),
  stats: z.array(StatsSchema).min(3).max(4),
})

export type Props = z.infer<typeof PropsSchema>

const { sectionId, stats } = PropsSchema.parse(Astro.props)
---

<div id={sectionId} class="absolute bottom-0  flex w-full translate-y-1/2 justify-center">
  <div class="container mx-auto">
  <div
    class="border-brand mx-auto box-border grid grid-cols-2 tablet:grid-cols-4 items-start justify-start desktop:gap-8 gap-3 rounded-3xl border border-solid bg-white desktop:p-8 p-3 w-full"
  >
    {
      stats.map((stat: { value: string; label: string }) => (
        <div class="flex min-h-px min-w-px shrink-0 grow basis-0 flex-col content-stretch items-center justify-start overflow-clip text-center leading-0">
          <div class="text-brand w-full shrink-0 desktop:text-6xl tablet:text-3xl text-2xl font-bold">
            <p class="leading-normal">{stat.value}</p>
          </div>
          <div class=" w-full shrink-0 ">
            <p class="text-text-primary desktop:text-lg tablet:text-base text-lg font-normal">{stat.label}</p>
          </div>
        </div>
      ))
    }
  </div>
  </div>
</div>
