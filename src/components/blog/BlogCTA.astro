---
import { z } from 'zod'
import Button from '@components/ui/Button.astro'
import Heading from '@components/ui/Heading.astro'

const PropsSchema = z.object({
  sectionId: z.string(),
  className: z.string().optional(),
  title: z.string().optional(),
  buttonText: z.string().optional(),
  buttonHref: z.string().optional(),
})

export type Props = z.infer<typeof PropsSchema>

const {
  sectionId = 'blog-cta',
  className = '',
  title = "Let's Get Your Project Started",
  buttonText = 'Contact Us Today',
  buttonHref = '#contact',
} = PropsSchema.parse(Astro.props)
---

<div
  class={`not-prose rounded-3xl bg-gradient-to-br from-brand to-primary-dark text-text-white p-6 tablet:p-8 flex flex-col items-center gap-4 my-12 ${className}`}
  id={sectionId}
  aria-label="Call to action"
>
  <Heading tag="h3" size="h3" variant="white" class="!mt-0">
    {title}
  </Heading>

  <Button
    intent="secondary"
    size="small"
    borderRadius="corner"
    href={buttonHref}
    class="!text-decoration-none !hover:text-decoration-none w-full md:w-3/4"
  >
    {buttonText}
  </Button>
</div>
