---
import { Icon } from 'astro-icon/components'
import { ICONS } from '@lib/icons'
import Heading from '@components/ui/Heading.astro'

export type Props = {
  id?: string
  title: string
  description: string
  icon?: string
  class?: string
}

const {
  id = 'pro-tip',
  title,
  description,
  icon = ICONS.ENERGY.LIGHT_BULB,
  class: className = '',
} = Astro.props as Props
---

<section
  id={id}
  aria-label={title}
  class={`rounded-3xl bg-gradient-to-br from-brand to-primary-dark text-text-white p-6 tablet:p-8 flex items-start gap-6 my-12 ${className}`}
>
  <div class="text-secondary h-16 w-16 shrink-0" aria-hidden="true">
    <Icon name={icon} class="h-16 w-16" />
  </div>

  <div class="flex-1">
    <Heading tag="h3" size="h3" variant="white" bottomSpacing="tight" class="!mt-0">
      {title}
    </Heading>
    <p class="mt-2 text-lg leading-relaxed">{description}</p>
  </div>
</section>
