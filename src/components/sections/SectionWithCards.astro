---
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import Button from '@components/ui/Button.astro'
import Heading from '@components/ui/Heading.astro'
import Badge from '../ui/Badge.astro'
import Card from '../ui/Card.astro'
import { formatText } from '@lib/utils/textFormatting'
import type { SectionWithCards } from '@schemas/section-schemas'

type Props = {
  content: SectionWithCards
}

const {
  content: {
    sectionId,
    title,
    background,
    paragraphs,
    badge,
    reverse,
    justifyContent,
    buttons,
    image,
    cards,
    cardLayout,
  },
} = Astro.props as Props
---

<section
  class={`tablet:py-28 py-10 ${background}`}
  aria-label="Section with cards container"
  id={sectionId}
>
  <div class="container">
    <div class="desktop:grid-cols-2 grid items-start gap-20">
      <div
        class={`desktop:items-start h-full text-left flex flex-col items-center ${
          justifyContent === 'center' ? 'justify-center' : 'justify-start'
        } ${reverse ? 'order-2' : 'order-1'}`}
      >
        {
          badge && (
            <Badge intent="secondary" roundness="sm" size="base">
              {badge}
            </Badge>
          )
        }

        <Heading tag="h2">{title}</Heading>
        <div class="mb-8 flex flex-col">
          {
            Object.entries(paragraphs).map(([key, text]) => {
              void key
              return <p class="text-text-primary mt-4" set:html={formatText(text)} />
            })
          }
        </div>

        {
          cards.length > 0 && (
            <div class="mb-8 w-full">
              <div
                class={`desktop:text-left text-center ${
                  cardLayout === 'grid'
                    ? 'grid grid-cols-1 gap-4 md:grid-cols-2'
                    : cardLayout === 'horizontal'
                      ? 'flex flex-col gap-4'
                      : 'space-y-4'
                }`}
              >
                {cards.map((card) => (
                  <div class="hover:border-brand flex items-start gap-3 rounded-lg border border-gray-200 p-4 transition-colors">
                    {card.icon && (
                      <div class="flex-shrink-0 pt-1">
                        <Icon name={card.icon} class="text-text-brand h-6 w-6" />
                      </div>
                    )}
                    <div class="flex-1">
                      <h4 class="text-text-primary mb-2 text-lg font-semibold">{card.title}</h4>
                      <p class="text-text-primary text-base">{card.description}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )
        }

        {
          buttons && (
            <div class="tablet:flex-row desktop:justify-start flex w-full flex-col justify-center gap-4">
              {buttons.primary && (
                <Button
                  intent="primary"
                  size="medium"
                  borderRadius="corner"
                  href={buttons.primary.href}
                >
                  {buttons.primary.text}
                </Button>
              )}
              {buttons.secondary && (
                <Button
                  intent="outlined"
                  size="medium"
                  borderRadius="corner"
                  href={buttons.secondary.href}
                >
                  {buttons.secondary.text}
                </Button>
              )}
            </div>
          )
        }
      </div>

      {
        image.src && (
          <div class={`${reverse ? 'order-1' : 'order-2'} h-full w-full`}>
            <Image
              src={image.src}
              alt={image.alt}
              class={`w-full rounded-3xl object-cover ${
                image.size ? `aspect-${image.size}` : 'h-full'
              } ${image.position === 'middle' ? 'self-center' : 'self-start'}`}
            />
          </div>
        )
      }
    </div>
  </div>
</section>
