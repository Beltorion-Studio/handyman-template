---
import { Image } from 'astro:assets'
import Heading from '@components/ui/Heading.astro'
import { z } from 'zod'

const PropsSchema = z.object({
  sectionId: z.string().optional(),
  title: z.string().optional(),
  backgroundClass: z.string().optional(),
  cards: z.object({
    card1: z.object({
      title: z.string(),
      content: z.string(),
    }),
    card2: z.object({
      image: z.any(), // ImageMetadata
      imageAlt: z.string(),
    }),
    card3: z.object({
      title: z.string(),
      content: z.string(),
    }),
    card4: z.object({
      image: z.any(), // ImageMetadata
      imageAlt: z.string(),
    }),
    card5: z.object({
      title: z.string(),
      content: z.string(),
    }),
    card6: z.object({
      image: z.any(), // ImageMetadata
      imageAlt: z.string(),
    }),
  }),
})

export type Props = z.infer<typeof PropsSchema>

const {
  sectionId = 'common-scenarios',
  title = 'Common Scenarios',
  backgroundClass = 'bg-white',
  cards,
} = PropsSchema.parse(Astro.props)

// Helper function to parse content into bullet points
const parseContentToList = (content: string) => {
  return content.split(', ').map((item) => item.trim())
}
---

<section
  class={`py-16 tablet:py-28 ${backgroundClass}`}
  aria-label="Common scenarios section"
  id={sectionId}
>
  <div class="container">
    <div class="mb-16 flex w-full items-center justify-center">
      <Heading tag="h2" size="h2">{title}</Heading>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Card 1: Content Card -->
      <div class="border-brand relative rounded-3xl border p-6">
        <div class="flex flex-col gap-4">
          <Heading tag="h3" size="h3" class="text-text-primary">
            {cards.card1.title}
          </Heading>
          <div class="space-y-3">
            {
              parseContentToList(cards.card1.content).map((item) => (
                <div class="flex items-start gap-4">
                  <div class="flex h-6 w-6 flex-shrink-0 items-center justify-center">
                    <svg
                      class="text-brand h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <p class="text-text-primary text-base leading-relaxed">{item}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Card 2: Image Card -->
      <div class="border-brand relative overflow-hidden rounded-3xl border">
        <Image
          src={cards.card2.image}
          alt={cards.card2.imageAlt}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>

      <!-- Card 3: Content Card -->
      <div class="border-brand relative rounded-3xl border p-6">
        <div class="flex flex-col gap-4">
          <Heading tag="h3" size="h3" class="text-text-primary">
            {cards.card3.title}
          </Heading>
          <div class="space-y-3">
            {
              parseContentToList(cards.card3.content).map((item) => (
                <div class="flex items-start gap-4">
                  <div class="flex h-6 w-6 flex-shrink-0 items-center justify-center">
                    <svg
                      class="text-brand h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <p class="text-text-primary text-base leading-relaxed">{item}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Card 4: Image Card -->
      <div class="border-brand relative overflow-hidden rounded-3xl border">
        <Image
          src={cards.card4.image}
          alt={cards.card4.imageAlt}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>

      <!-- Card 5: Content Card -->
      <div class="border-brand relative rounded-3xl border p-6">
        <div class="flex flex-col gap-4">
          <Heading tag="h3" size="h3" class="text-text-primary">
            {cards.card5.title}
          </Heading>
          <div class="space-y-3">
            {
              parseContentToList(cards.card5.content).map((item) => (
                <div class="flex items-start gap-4">
                  <div class="flex h-6 w-6 flex-shrink-0 items-center justify-center">
                    <svg
                      class="text-brand h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      aria-hidden="true"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <p class="text-text-primary text-base leading-relaxed">{item}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Card 6: Image Card -->
      <div class="border-brand relative overflow-hidden rounded-3xl border">
        <Image
          src={cards.card6.image}
          alt={cards.card6.imageAlt}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>
    </div>
  </div>
</section>
