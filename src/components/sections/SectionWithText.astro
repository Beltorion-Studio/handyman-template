---
import Heading from '@components/ui/Heading.astro'
import Badge from '@components/ui/Badge.astro'
import { formatText } from '@lib/utils/textFormatting'
import type { SectionWithText } from '@schemas/section-schemas'

type Props = {
  content: SectionWithText
}

const {
  content: { sectionId, title, description, badge, className },
} = Astro.props as Props
---

<section
  class={`tablet:py-28 py-10 bg-white ${className}`}
  aria-label="Get in touch section"
  id={sectionId}
>
  <div class="container">
    <div class="flex flex-col items-center justify-start gap-8 px-4">
      <div class="flex flex-col items-center justify-start gap-2 text-center">
        {
          badge && (
            <Badge intent="secondary" roundness="sm" size="base" class="mb-0">
              {badge}
            </Badge>
          )
        }

        {
          title && (
            <Heading
              tag="h2"
              size="h2"
              variant="primary"
              align="center"
              class="text-text-primary whitespace-pre-wrap"
              text={title}
            />
          )
        }
      </div>

      {
        description && (
          <div class="w-full max-w-[900px]">
            <p
              class="text-text-primary text-lg leading-[1.4] font-normal"
              set:html={formatText(description)}
            />
          </div>
        )
      }
    </div>
  </div>
</section>
