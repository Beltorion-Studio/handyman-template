---
import Heading from '@components/ui/Heading.astro'
import BulletCard from '@components/ui/BulletCard.astro'

export type Props = {
  sectionId: string
  title: string
  columns: Array<{
    title: string
    items: string[]
    iconName?: string
    iconColor?: string
  }>
  className?: string
  background?: string
}

const {
  title,
  columns = [],
  sectionId = 'three-columns-section',
  className = '',
  background = 'bg-white',
} = Astro.props
---

<section class={`py-16 tablet:py-28 ${background} ${className}`} id={sectionId}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <Heading tag="h2" size="h2" variant="primary" align="center" class="mb-0">
        {title}
      </Heading>
    </div>

    <!-- Three Columns Grid -->
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
      {
        columns.map((column) => (
          <BulletCard
            title={column.title}
            items={column.items}
            iconName={column.iconName}
            iconColor={column.iconColor || 'brand'}
            border={false}
          />
        ))
      }
    </div>
  </div>
</section>
