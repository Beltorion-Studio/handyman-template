<Layout title="Section Components Test">
  <!-- Development Header -->
  <div class="bg-brand px-6 py-4 pt-24 text-white">
    <div class="mx-auto max-w-7xl">
      <h1 class="text-2xl font-bold">Section Components Development Page</h1>
      <p class="mt-1 text-white/80">Navigate through all available section components</p>
    </div>
  </div>

  <div class="flex min-h-screen bg-gray-50">
    <!-- Left Navigation Sidebar -->
    <nav class="sticky top-24 h-screen w-60 overflow-y-auto bg-white shadow-lg">
      <div class="pr-1 pb-28 pl-4">
        <h2 class="text-text-primary mb-4 text-lg font-semibold">Section Navigation</h2>
        <ul class="space-y-2">
          {
            sections.map((section) => (
              <li>
                <Link
                  href={`#${section.id}`}
                  intent="tertiary"
                  size="small"
                  class="hover:bg-brand/10 block rounded-md px-2 py-2 transition-colors duration-200"
                  data-section={section.id}
                >
                  <div class="text-text-primary text-base font-medium">{section.title}</div>
                  <div class="text-brand text-base">{section.component}</div>
