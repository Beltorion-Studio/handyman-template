---
import Layout from '@layouts/Layout.astro'
import Link from '@components/ui/Link.astro'
import HeroWithStats from '@components/sections/HeroWithStats.astro'
import Hero from '@components/sections/Hero.astro'
import SectionWithText from '@components/sections/SectionWithText.astro'
import SectionRegular from '@components/sections/SectionRegular.astro'
import SectionWithContent from '@components/sections/SectionWithContent.astro'
import SectionWithBullets from '@components/sections/SectionWithBullets.astro'
import SectionWithIcons from '@components/sections/SectionWithIcons.astro'
import SectionWithCards from '@components/sections/SectionWithCards.astro'
import SectionWithFeatures from '@components/sections/SectionWithFeatures.astro'
import SectionWithTrustStats from '@components/sections/SectionWithTrustStats.astro'
import SectionWithCarousel from '@components/sections/SectionWithCarousel.astro'
import SectionWithFaq from '@components/sections/SectionWithFaq.astro'
import PostsSection from '@components/sections/PostsSection.astro'
import FeaturedBlogSection from '@components/sections/FeaturedBlogSection.astro'
import ContactSectionNew from '@components/sections/ContactSectionNew.astro'
import Services from '@components/sections/Services.astro'
import TeamSection from '@components/sections/TeamSection.astro'
import testImage from '@assets/images/installer-holding-shelf-w2000.jpg'
import aboutImage from '@assets/images/crossed-arms.jpg'
import serviceImage from '@assets/images/locksmith.jpg'
import heroImage from '@assets/images/installer-holding-shelf-w2000.jpg'
import carouselImage1 from '@assets/images/installer-holding-shelf-w2000.jpg'
import carouselImage2 from '@assets/images/crossed-arms.jpg'
import carouselImage3 from '@assets/images/locksmith.jpg'
import { getCollection } from 'astro:content'

// Get collections for PostsSection, Services, and TeamSection
const allBlogPosts = await getCollection('blog')
const blogPosts = allBlogPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())

const allServices = await getCollection('services')
const services = allServices.filter((service) => service.data.featured)

const teamMembers = await getCollection('team')

// Define sections for navigation
const sections = [
  { id: 'hero-stats-example', title: 'Hero With Stats', component: 'HeroWithStats' },
  { id: 'hero-example', title: 'Hero Section', component: 'Hero' },
  { id: 'get-in-touch-section', title: 'Section With Text', component: 'SectionWithText' },
  { id: 'regular-section', title: 'Section Regular', component: 'SectionRegular' },
  { id: 'content-section', title: 'Section With Content', component: 'SectionWithContent' },
  { id: 'bullets-section', title: 'Section With Bullets', component: 'SectionWithBullets' },
  { id: 'icons-section', title: 'Section With Icons', component: 'SectionWithIcons' },
  { id: 'cards-section', title: 'Section With Cards (Grid)', component: 'SectionWithCards' },
  {
    id: 'features-section',
    title: 'Section With Features (Vertical)',
    component: 'SectionWithFeatures',
  },
  {
    id: 'cards-horizontal-section',
    title: 'Section With Cards (Horizontal)',
    component: 'SectionWithCards',
  },
  {
    id: 'features-grid-section',
    title: 'Section With Features (Grid)',
    component: 'SectionWithFeatures',
  },
  {
    id: 'trust-stats-section',
    title: 'Section With Trust Stats',
    component: 'SectionWithTrustStats',
  },
  { id: 'carousel-section', title: 'Section With Carousel', component: 'SectionWithCarousel' },
  { id: 'faq-section', title: 'Section With FAQ', component: 'SectionWithFaq' },
  { id: 'featured-blog-section', title: 'Featured Blog Section', component: 'FeaturedBlogSection' },
  { id: 'posts-section', title: 'Posts Section', component: 'PostsSection' },
  { id: 'services-section', title: 'Services Section', component: 'Services' },
  { id: 'team-section', title: 'Team Section', component: 'TeamSection' },
  { id: 'contact-new', title: 'Contact Section New', component: 'ContactSectionNew' },
