---
import Layout from '@layouts/Layout.astro'
import SectionWithCards from '@components/sections/SectionWithCards.astro'
import SectionWithFeatures from '@components/sections/SectionWithFeatures.astro'
import SectionWithContent from '@components/sections/SectionWithContent.astro'
import SectionWithText from '@components/sections/SectionWithText.astro'
import SectionWithBullets from '@components/sections/SectionWithBullets.astro'
import SectionWithIcons from '@components/sections/SectionWithIcons.astro'
import SectionWithTrustStats from '@components/sections/SectionWithTrustStats.astro'
import Hero from '@components/sections/Hero.astro'
import HeroWithStats from '@components/sections/HeroWithStats.astro'
import SectionRegular from '@components/sections/SectionRegular.astro'
import SectionWithCarousel from '@components/sections/SectionWithCarousel.astro'
import PostsSection from '@components/sections/PostsSection.astro'
import FeaturedBlogSection from '@components/sections/FeaturedBlogSection.astro'
import ContactSectionNew from '@components/sections/ContactSectionNew.astro'
import Services from '@components/sections/Services.astro'
import TeamSection from '@components/sections/TeamSection.astro'
import testImage from '@assets/images/installer-holding-shelf-w2000.jpg'
import aboutImage from '@assets/images/crossed-arms.jpg'
import serviceImage from '@assets/images/locksmith.jpg'
import heroImage from '@assets/images/installer-holding-shelf-w2000.jpg'
import carouselImage1 from '@assets/images/installer-holding-shelf-w2000.jpg'
import carouselImage2 from '@assets/images/crossed-arms.jpg'
import carouselImage3 from '@assets/images/locksmith.jpg'
import { getCollection } from 'astro:content'

// Get collections for PostsSection, Services, and TeamSection
const allBlogPosts = await getCollection('blog')
const blogPosts = allBlogPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())

const allServices = await getCollection('services')
const services = allServices.filter((service) => service.data.featured)

const teamMembers = await getCollection('team')
---

<Layout title="Section Components Test">
  <!-- Hero With Stats Example -->
  <HeroWithStats
    sectionId="hero-stats-example"
    heroImage={{ src: heroImage, alt: 'Hero with stats background' }}
    title="Section Components Test Page"
    subheading="Experience the difference professional handyman services can make."
    primaryButtonText="Schedule Service"
    primaryButtonHref="/contact"
    secondaryButtonText="View Portfolio"
    secondaryButtonHref="/works"
  />

  <!-- Section With Text Example -->
  <SectionWithText
    badge="Get in Touch Today"
    title="Simple Steps to Your Next Project"
    description="Reaching out is the easiest way to start turning your ideas into reality. Whether it's a small repair, a fresh coat of paint, or a full renovation, we're here to listen and help. Every project begins with a conversationâ€”one where your needs, timeline, and budget are understood from the start. With clear communication and a straightforward process, we make it stress-free to get the support you need. Fill out the form below and let us handle the rest with professionalism and care."
    sectionId="get-in-touch-section"
  />

  <!-- Section With Cards Example -->
  <SectionWithCards
    content={{
      sectionId: 'cards-section',
      badge: 'Services',
      title: 'Our Service Cards',
      reverse: true,
      paragraphs: {
        p1: 'Here are some of our key services displayed as cards with icons and descriptions.',
        p2: 'Each card represents a different service we offer to our customers.',
      },
      buttons: {
        primary: {
          text: 'View All Services',
          href: '/services',
        },
        secondary: {
          text: 'Contact Us',
          href: '/contact',
        },
      },
      image: {
        src: serviceImage,
        alt: 'Handyman services',
      },
      cards: [
        {
          title: 'Plumbing Repairs',
          description: 'Fix leaks, unclog drains, and repair plumbing fixtures',
          icon: 'plumber-wrench',
        },
        {
          title: 'Electrical Work',
          description: 'Install outlets, fix lighting, and electrical maintenance',
          icon: 'energy-electric-plug',
        },
        {
          title: 'Carpentry',
          description: 'Custom woodwork, repairs, and furniture assembly',
          icon: 'home-repair-hammer',
        },
        {
          title: 'Painting',
          description: 'Interior and exterior painting services',
          icon: 'home-repair-paint-brush',
        },
      ],
      cardLayout: 'grid',
    }}
  />

  <!-- Section With Features Example -->
  <SectionWithFeatures
    content={{
      sectionId: 'features-section',
      badge: 'Features',
      title: 'Why Choose Our Services',
      paragraphs: {
        p1: 'We provide exceptional handyman services with these key features.',
        p2: 'Our team is committed to delivering quality work and customer satisfaction.',
      },
      buttons: {
        primary: {
          text: 'Get Started',
          href: '/contact',
        },
      },
      image: {
        src: testImage,
        alt: 'Professional handyman work',
      },
      features: [
        {
          title: 'Licensed & Insured',
          description: 'All our technicians are fully licensed and insured for your peace of mind.',
          icon: 'security-shield',
          highlight: true,
        },
        {
          title: 'Same Day Service',
          description: 'Most repairs can be completed the same day you call us.',
          icon: 'energy-light-bulb',
        },
        {
          title: 'Quality Guarantee',
          description: 'We stand behind our work with a comprehensive quality guarantee.',
          icon: 'security-badge',
        },
        {
          title: 'Fair Pricing',
          description: 'Transparent, upfront pricing with no hidden fees or surprises.',
          icon: 'home-repair-toolbox',
        },
      ],
      featureLayout: 'vertical',
    }}
  />

  <!-- Section With Content Example -->
  <SectionWithContent
    content={{
      sectionId: 'content-section',
      reverse: true,
      badge: 'About',
      title: 'Meet Our Team',
      paragraphs: {
        p1: 'Our experienced team of handymen is dedicated to providing top-quality service.',
        p2: 'With years of experience in various trades, we can handle any project big or small.',
      },
      buttons: {
        primary: {
          text: 'Learn More',
          href: '/about',
        },
        secondary: {
          text: 'View Portfolio',
          href: '/works',
        },
      },
      image: {
        src: aboutImage,
        alt: 'Our professional team',
        size: 'square',
      },
      additionalContent: {
        heading: 'Professional Excellence',
        description:
          'We pride ourselves on professional excellence, attention to detail, and customer satisfaction. Every project is completed with the highest standards of quality and craftsmanship.',
      },
    }}
  />

  <!-- Section With Cards - Horizontal Layout -->
  <SectionWithCards
    content={{
      sectionId: 'cards-horizontal-section',
      badge: 'Process',
      title: 'Our Work Process',
      paragraphs: {
        p1: 'Here is how we approach every project to ensure the best results.',
        p2: 'Our systematic approach ensures quality and efficiency in every job.',
      },
      buttons: {
        primary: {
          text: 'Start Your Project',
          href: '/contact',
        },
      },
      image: {
        src: testImage,
        alt: 'Our work process',
      },
      cards: [
        {
          title: '1. Initial Consultation',
          description: 'We discuss your needs and provide a detailed estimate',
        },
        {
          title: '2. Planning & Scheduling',
          description: 'We plan the work and schedule it at your convenience',
        },
        {
          title: '3. Quality Execution',
          description: 'Our skilled team completes the work to the highest standards',
        },
        {
          title: '4. Final Inspection',
          description: 'We ensure everything meets your expectations before finishing',
        },
      ],
      cardLayout: 'horizontal',
    }}
  />

  <!-- Section With Features - Grid Layout -->
  <SectionWithFeatures
    content={{
      sectionId: 'features-grid-section',
      reverse: true,
      badge: 'Benefits',
      title: 'Customer Benefits',
      paragraphs: {
        p1: 'Experience the benefits of choosing our handyman services.',
        p2: 'We focus on delivering value and satisfaction to every customer.',
      },
      buttons: {
        primary: {
          text: 'Get Quote',
          href: '/contact',
        },
        secondary: {
          text: 'Call Now',
          href: 'tel:+1234567890',
        },
      },
      image: {
        src: serviceImage,
        alt: 'Customer benefits',
      },
      features: [
        {
          title: 'Time Saving',
          description: 'Get your repairs done quickly and efficiently.',
          icon: 'repair-toolbox',
        },
        {
          title: 'Cost Effective',
          description: 'Competitive rates with no hidden fees.',
          icon: 'home-repair-toolbox',
        },
        {
          title: 'Reliable Service',
          description: 'On-time service you can count on.',
          icon: 'security-badge',
        },
        {
          title: 'Expert Knowledge',
          description: 'Years of experience in multiple trades.',
          icon: 'repair-helmet',
        },
      ],
      featureLayout: 'grid',
    }}
  />

  <!-- Section With Bullets Example -->
  <SectionWithBullets
    content={{
      sectionId: 'bullets-section',
      badge: 'Process',
      title: 'Our Simple Process',
      paragraphs: {
        p1: 'We follow a simple, proven process to ensure your satisfaction.',
        p2: 'From initial contact to project completion, we keep you informed every step of the way.',
      },
      buttons: {
        primary: {
          text: 'Get Started',
          href: '/contact',
        },
      },
      image: {
        src: testImage,
        alt: 'Our simple process',
      },
      bulletPoints: [
        'Free consultation and estimate',
        'Flexible scheduling to fit your needs',
        'Quality materials and expert workmanship',
        'Clean-up and final inspection',
      ],
      listType: 'bullets',
    }}
  />

  <!-- Section With Icons Example -->
  <SectionWithIcons
    content={{
      sectionId: 'icons-section',
      badge: 'Services',
      title: 'What We Offer',
      paragraphs: {
        p1: 'We provide comprehensive handyman services for your home.',
        p2: 'Our skilled team can handle a wide variety of repair and maintenance tasks.',
      },
      buttons: {
        primary: {
          text: 'View All Services',
          href: '/services',
        },
      },
      image: {
        src: serviceImage,
        alt: 'Our services',
      },
      iconItems: [
        {
          icon: 'plumber-wrench',
          text: 'Plumbing repairs and installations',
        },
        {
          icon: 'energy-electric-plug',
          text: 'Electrical work and fixtures',
        },
        {
          icon: 'home-repair-hammer',
          text: 'Carpentry and woodworking',
        },
        {
          icon: 'home-repair-paint-brush',
          text: 'Painting and refinishing',
        },
      ],
    }}
  />

  <!-- Section With Trust Stats Example -->
  <SectionWithTrustStats
    content={{
      sectionId: 'trust-stats-section',
      badge: 'Trust',
      title: 'Why Homeowners Trust Us',
      paragraphs: {
        p1: 'Our track record speaks for itself with satisfied customers and quality work.',
        p2: 'We are committed to excellence in every project we undertake.',
      },
      buttons: {
        primary: {
          text: 'Join Our Happy Customers',
          href: '/contact',
        },
      },
      trustStats: [
        {
          value: '500+',
          label: 'Happy Customers',
        },
        {
          value: '15+',
          label: 'Years Experience',
        },
        {
          value: '24/7',
          label: 'Emergency Service',
        },
        {
          value: '100%',
          label: 'Satisfaction Guaranteed',
        },
      ],
    }}
  />

  <!-- Hero Section Example -->
  <Hero
    sectionId="hero-example"
    heroImage={{ src: heroImage, alt: 'Hero background' }}
    title="Professional Handyman Services"
    subheading="Reliable, skilled, and ready to help with all your home repair needs."
    primaryButtonText="Get Free Quote"
    primaryButtonHref="/contact"
    secondaryButtonText="Learn More"
    secondaryButtonHref="/about"
  />

  <!-- Section Regular Example -->
  <SectionRegular
    content={{
      sectionId: 'regular-section',
      badge: 'About',
      title: 'Our Story',
      paragraphs: {
        p1: 'We started as a small family business with a passion for helping homeowners.',
        p2: 'Today, we continue to provide the same personal touch and quality workmanship.',
      },
      buttons: {
        primary: {
          text: 'Learn Our Story',
          href: '/about',
        },
      },
      image: {
        src: aboutImage,
        alt: 'Our story',
      },
    }}
  />

  <!-- Section With Carousel Example -->
  <SectionWithCarousel
    content={{
      sectionId: 'carousel-section',
      badge: 'Our Latest Project',
      title: 'University Library Renovation',
      paragraphs: {
        p1: 'Our recent project involved renovating the University Library. We assembled modern furniture, installed parquet flooring, painted walls for a fresh look, and replaced outdated light fixtures.',
        p2: 'The result? A polished and professional space that balances function and style, giving employees and students a welcoming environment.',
      },
      buttons: {
        primary: {
          text: 'View All Works',
          href: '/works',
        },
      },
      image: {
        src: carouselImage1,
        alt: 'University Library renovation project',
      },
    }}
    carouselImages={[
      {
        src: carouselImage1,
        alt: 'University Library renovation - main view',
      },
      {
        src: carouselImage2,
        alt: 'University Library renovation - team at work',
      },
      {
        src: carouselImage3,
        alt: 'University Library renovation - final result',
      },
    ]}
    sectionId="carousel-section"
  />

  <!-- Featured Blog Section Example -->
  <FeaturedBlogSection
    sectionId="featured-blog-section"
    post={blogPosts[0]}
    postType="blog"
    readMoreText="Read more"
  />

  <!-- Posts Section Example -->
  <PostsSection
    sectionId="posts-section"
    badge="Blog"
    title="Latest Tips & News"
    description="Stay updated with helpful home maintenance tips and industry news."
    posts={blogPosts}
    maxPosts={3}
    buttonText="View All Posts"
    buttonHref="/blog"
  />

  <!-- Services Section Example -->
  <Services sectionId="services-section" title="Featured Services" services={services} />

  <!-- Team Section Example -->
  <TeamSection sectionId="team-section" teamMembers={teamMembers} />

  <ContactSectionNew
    sectionId="contact-new"
    badge="Contact Us"
    title="Let's Talk About Your Needs"
    description="We're just one form away from helping you. Share your project details, and we'll provide fast, friendly, and professional solutions tailored to your home or business."
  />
</Layout>
